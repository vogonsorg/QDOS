	$(MAKE) $(MFLAGS) -f Makefile.X11 targets \
	"GL_LIB = libGL.sl" \
	"GLU_LIB = libGLU.sl" \
	"GLUT_LIB = libglut.sl" \
	"GLW_LIB = libGLw.sl" \
	"OSMESA_LIB = libOSMesa.sl" \
