	"CXX = g++" \
	"CFLAGS = -fPIC -ansi -O3 -D_HPUX_SOURCE -I/usr/include/X11R5 -DUSE_XSHM" \
	"CXXFLAGS = -fPIC -ansi -O3 -D_HPUX_SOURCE" \
