	"CXXFLAGS = -O3 -ansi -pedantic -fPIC -ffast-math -D_POSIX_SOURCE -D_POSIX_C_SOURCE=199309L -D_SVID_SOURCE -D_BSD_SOURCE" \
	"GLUT_CFLAGS = -fexceptions" \
	"GL_LIB_DEPS = -lm -lpthread" \
