	"GLU_LIB = libGLU.a" \
	"GLUT_LIB = libglut.a" \
	"GLW_LIB = libGLw.a" \
	"OSMESA_LIB = libOSMesa.a" \
	"CC = cc" \
	"CFLAGS = -O" \
	"MAKELIB = $(TOP)/bin/mklib.qnx" \
	"APP_LIB_DEPS = -L/usr/X11/lib -lX11 -lm"

