	$(MAKE) $(MFLAGS) -f Makefile.X11 targets \
	"GL_LIB = libGL.so" \
	"GLU_LIB = libGLU.so" \
	"GLUT_LIB = libglut.so" \
	"GLW_LIB = libGLw.so" \
